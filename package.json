{
  "name": "mythicloom",
  "version": "0.1.0",
  "description": "MythicLoom is a Reddit Devvit Web adventure where the community weaves the canon together day by day.",
  "scripts": {
    "dev": "vite --config vite.client.config.ts",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config vite.client.config.ts",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "test": "vitest run",
    "start": "node dist/server/index.js",
    "devvit:login": "npx devvit login",
  "devvit:playtest": "node scripts/devvit-playtest.js",
    "devvit:launch": "npm run build && npx devvit launch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@devvit/cli": "^0.10.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "tsc-alias": "^1.8.7",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^1.6.0"
  }
}
